<p id="notice"><%= notice %></p>

<h1>Expenses</h1>

<table>
  <thead>
    <tr>
      <th>Project</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price total</th>
      <th>Total paid</th>
      <th>Total dept</th>
      <th>Date pay</th>
      <th>Status</th>
      <th>Number quota</th>
      <th>Code</th>
      <th>Scrapping</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @expenses.each do |expense| %>
      <tr>
        <td><%= expense.project_id %></td>
        <td><%= expense.name %></td>
        <td><%= expense.description %></td>
        <td><%= expense.price_total %></td>
        <td><%= expense.total_paid %></td>
        <td><%= expense.total_dept %></td>
        <td><%= expense.date_pay %></td>
        <td><%= expense.status %></td>
        <td><%= expense.number_quota %></td>
        <td><%= expense.code %></td>
        <td><%= expense.scrapping %></td>
        <td><%= link_to 'Show', expense %></td>
        <td><%= link_to 'Edit', edit_expense_path(expense) %></td>
        <td><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

